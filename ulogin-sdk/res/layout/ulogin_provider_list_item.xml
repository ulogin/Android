<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ulogin_item_height"
    android:maxHeight="@dimen/ulogin_item_height"
    android:minHeight="@dimen/ulogin_item_height"
    android:orientation="horizontal"
    android:padding="0dp"
    android:theme="@style/ulogin_theme" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/icon"
            style="@style/ulogin_icon" />

        <TextView
            android:id="@+id/label"
            style="@style/ulogin_item_text" />

        <ImageView
            android:id="@+id/iconSpacer"
            style="@style/ulogin_item_selector"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>